# CineMatch V2.1 - Secrets Configuration Example
# Copy this file to 'secrets.toml' and fill in your values
# NOTE: No external API keys needed for this version!

# Application Settings
[app]
environment = "production"  # or "development"
debug_mode = false

# Optional: Future API integrations (not currently used)
# [api]
# tmdb_api_key = "your_tmdb_key_here"  # Not needed - we use local data only!

# Database (if you add user authentication later)
# [database]
# connection_string = "your_db_connection_string"
