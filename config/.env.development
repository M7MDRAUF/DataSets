# =============================================================================
# CineMatch Environment Configuration - Development
# Task 4.6: Environment-specific configurations
# =============================================================================
# Development environment configuration
# Copy to .env and modify as needed for local development
# =============================================================================

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
CINEMATCH_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=CineMatch-Dev
APP_VERSION=2.1.6-dev
SECRET_KEY=dev-secret-key-change-in-production

# -----------------------------------------------------------------------------
# Server - Streamlit UI
# -----------------------------------------------------------------------------
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=true
STREAMLIT_SERVER_RUN_ON_SAVE=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_THEME_BASE=dark

# -----------------------------------------------------------------------------
# Server - API
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2
API_RELOAD=true
API_DEBUG=true

# -----------------------------------------------------------------------------
# Data Configuration
# -----------------------------------------------------------------------------
DATA_DIR=./data
MODELS_DIR=./models
PROCESSED_DATA_DIR=./data/processed
ML_DATA_DIR=./data/ml-32m

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
MODEL_CACHE_ENABLED=true
MODEL_CACHE_SIZE=100
MODEL_PRELOAD=false
DEFAULT_ALGORITHM=hybrid

# Model Loading Performance (Task 26-30: Preloading Config)
FAST_MODEL_LOAD=true
USE_JOBLIB_MMAP=true
SKIP_HASH_VERIFICATION=true
MODEL_PRELOAD_ON_STARTUP=false
MODEL_PRELOAD_BACKGROUND=false
MODEL_PRELOAD_PRIORITY=hybrid,svd,content_based,item_knn,user_knn
MODEL_WARM_UP_ENABLED=false
MODEL_VERIFY_CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_ANALYTICS=true
FEATURE_USER_PROFILES=true
FEATURE_WATCHLIST=true
FEATURE_REAL_TIME_UPDATES=false
FEATURE_A_B_TESTING=true

# -----------------------------------------------------------------------------
# Caching
# -----------------------------------------------------------------------------
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Redis (optional - falls back to in-memory if unavailable)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
CORS_ENABLED=true
CORS_ORIGINS=*
CORS_METHODS=*
CORS_HEADERS=*

# Authentication (disabled in dev)
AUTH_ENABLED=false
AUTH_TOKEN_EXPIRY=86400

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_FORMAT=detailed
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/cinematch-dev.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=3

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=false
PROFILING_ENABLED=true

# -----------------------------------------------------------------------------
# Database (if applicable)
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///./data/cinematch-dev.db
DATABASE_ECHO=true
DATABASE_POOL_SIZE=5

# -----------------------------------------------------------------------------
# External Services (mocked in dev)
# -----------------------------------------------------------------------------
MOVIE_API_URL=https://api.themoviedb.org/3
MOVIE_API_KEY=your-dev-api-key
MOVIE_API_MOCK=true
